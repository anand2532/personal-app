<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/terminal_background"
    tools:context=".MainActivity">

    <!-- Terminal-style Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/terminal_background"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/terminal_background"
            app:title="@string/app_name"
            app:titleTextColor="@color/terminal_text"
            app:titleTextAppearance="@style/TerminalTextStyle">

                    <TextView
                        android:id="@+id/weatherTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:text="12:00"
                        android:textColor="@color/terminal_text"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/terminal_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/terminal_background">

            <!-- Projects Section - Now at the top -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJECTS"
                android:textColor="@color/terminal_text"
                android:fontFamily="monospace"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:background="@color/terminal_background" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="false"
                android:layout_marginBottom="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/project1Button"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="@color/terminal_background"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/terminal_text"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@color/terminal_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="┌─ PROJECT 1"
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="└─ [Interface]"
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/project2Button"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="@color/terminal_background"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/terminal_text"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@color/terminal_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="┌─ PROJECT 2"
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="└─ [Interface]"
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/project3Button"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="@color/terminal_background"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/terminal_text"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@color/terminal_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="┌─ PROJECT 3"
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="└─ [Interface]"
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/project4Button"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="@color/terminal_background"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/terminal_text"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@color/terminal_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="┌─ PROJECT 4"
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="└─ [Interface]"
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Chat Section - Now smaller and at bottom -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHAT ASSISTANT"
                android:textColor="@color/terminal_text"
                android:fontFamily="monospace"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:background="@color/terminal_background" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_background"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/terminal_text"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@color/terminal_background">

                    <!-- Chat Messages - Small initial height -->
                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/chatScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@color/terminal_background"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false">

                        <com.personal.app.TerminalTextView
                            android:id="@+id/chatMessagesTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/terminal_text"
                            android:background="@color/terminal_background"
                            android:padding="8dp"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:lineSpacingExtra="2dp" />

                    </androidx.core.widget.NestedScrollView>

                    <!-- Terminal-style Input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:background="@color/terminal_background"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="anand@personal-app:~$ "
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="12sp"
                            android:layout_marginEnd="4dp" />

                        <EditText
                            android:id="@+id/messageEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="type command..."
                            android:textColor="@color/terminal_text"
                            android:textColorHint="@color/terminal_user"
                            android:background="@android:color/transparent"
                            android:fontFamily="monospace"
                            android:textSize="13sp"
                            android:textCursorDrawable="@drawable/cursor_terminal"
                            android:imeOptions="actionSend"
                            android:inputType="text"
                            android:padding="4dp"
                            android:textColorHighlight="@color/terminal_text"
                            android:singleLine="true"
                            android:textStyle="normal"
                            android:minHeight="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sendButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:text="[SEND]"
                            android:textColor="@color/terminal_text"
                            android:backgroundTint="@color/terminal_background"
                            android:fontFamily="monospace"
                            android:textSize="10sp"
                            android:minHeight="32dp"
                            android:paddingHorizontal="12dp"
                            app:strokeColor="@color/terminal_text"
                            app:strokeWidth="1dp"
                            app:cornerRadius="2dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
