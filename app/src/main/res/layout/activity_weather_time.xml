<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/terminal_background"
    tools:context=".WeatherTimeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/terminal_background"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/terminal_background"
            app:title="Weather &amp; Time"
            app:titleTextColor="@color/terminal_text"
            app:titleTextAppearance="@style/TerminalTextStyle"
            app:navigationIconTint="@color/terminal_text" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/terminal_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/terminal_background">

            <!-- Terminal Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="╔═══════════════════════════════════════╗"
                android:textColor="@color/terminal_text"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="║   WEATHER &amp; TIME INFORMATION          ║"
                android:textColor="@color/terminal_text"
                android:fontFamily="monospace"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="╚═══════════════════════════════════════╝"
                android:textColor="@color/terminal_text"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Date and Time Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_background"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/terminal_text"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/terminal_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="┌─ DATE &amp; TIME"
                        android:textColor="@color/terminal_text"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/dateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date: Loading..."
                        android:textColor="@color/terminal_user"
                        android:fontFamily="monospace"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/timeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time: Loading..."
                        android:textColor="@color/terminal_text"
                        android:fontFamily="monospace"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="└─"
                        android:textColor="@color/terminal_text"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weather Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_background"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/terminal_text"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/terminal_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="┌─ WEATHER INFORMATION"
                        android:textColor="@color/terminal_text"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location: "
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/locationTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature: "
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/temperatureTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feels Like: "
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/feelsLikeTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description: "
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/descriptionTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity: "
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/humidityTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind Speed: "
                            android:textColor="@color/terminal_user"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/windSpeedTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textColor="@color/terminal_text"
                            android:fontFamily="monospace"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="└─"
                        android:textColor="@color/terminal_text"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Refresh Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/refreshButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[REFRESH DATA]"
                android:textColor="@color/terminal_text"
                android:backgroundTint="@color/terminal_background"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:minHeight="48dp"
                app:strokeColor="@color/terminal_text"
                app:strokeWidth="1dp"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="8dp" />

            <!-- Terminal Footer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="╚═══════════════════════════════════════╝"
                android:textColor="@color/terminal_text"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
